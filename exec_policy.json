    "reboot",
    "halt",
    "poweroff",
    "init 0",
    "init 6",
    "systemctl poweroff",
    "systemctl reboot",
    "kill -9 -1",
    "pkill -9 -1",
    "fork bomb",
    "while true; do",
    "yes | rm -rf",
    "find / -delete"
  ],
  
  "encouraged_patterns": [
    "# Use heredocs freely! They're powerful for creating multi-line content",
    "cat << 'EOF' > file.md",
    "# Use command substitution to make dynamic content",
    "$(date), $(ls | wc -l), $(find . -name '*.md')",
