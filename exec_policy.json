  "deny_patterns": [
    "rm -rf /",
    "rm -rf /*",
    "dd if=/dev/zero of=/",
    "mkfs.",
    "format c:",
    ":(){ :|:& };:",
    "> /dev/sda",
    "/dev/null > /",
    "chmod -R 000 /",
    "chown -R nobody:nobody /",
    "mv / /dev/null",
